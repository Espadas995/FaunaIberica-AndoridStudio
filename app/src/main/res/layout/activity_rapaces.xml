<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!--    Título -->
        <TextView
            android:id="@+id/tvRapaces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rapaces y Carroñeras"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--    Contenedor FrameLayout -->
        <FrameLayout
            android:id="@+id/frameLayoutRapaces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvRapaces"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Águila Imperial -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="16dp">
                        <ImageView
                            android:id="@+id/imgAguilaImperial"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/aguila"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"/>
                        <RadioButton
                            android:id="@+id/radioAguilaImperial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:buttonTint="#FF5722"
                            android:layout_margin="4dp"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/nombreAguilaImperial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Águila Imperial"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <!-- Búho Real -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="16dp">
                        <ImageView
                            android:id="@+id/imgBuhoReal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/buho"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"/>
                        <RadioButton
                            android:id="@+id/radioBuhoReal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:buttonTint="#FF5722"
                            android:layout_margin="4dp"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/nombreBuhoReal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Búho Real"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <!-- Halcón Peregrino -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="16dp">
                        <ImageView
                            android:id="@+id/imgHalconPeregrino"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/halcon"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"/>
                        <RadioButton
                            android:id="@+id/radioHalconPeregrino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:buttonTint="#FF5722"
                            android:layout_margin="4dp"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/nombreHalconPeregrino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Halcón Peregrino"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <!-- Cernícalo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="16dp">
                        <ImageView
                            android:id="@+id/imgCernicalo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/cernicalo"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"/>
                        <RadioButton
                            android:id="@+id/radioCernicalo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:buttonTint="#FF5722"
                            android:layout_margin="4dp"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/nombreCernicalo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cernícalo"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <!-- Quebrantahuesos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="16dp">
                        <ImageView
                            android:id="@+id/imgQuebrantahuesos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/quebrantahuesos"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"/>
                        <RadioButton
                            android:id="@+id/radioQuebrantahuesos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:buttonTint="#FF5722"
                            android:layout_margin="4dp"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/nombreQuebrantahuesos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quebrantahuesos"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <!-- Buitre Leonado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="16dp">
                        <ImageView
                            android:id="@+id/imgBuitreLeonado"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/buitre"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"/>
                        <RadioButton
                            android:id="@+id/radioBuitreLeonado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start"
                            android:buttonTint="#FF5722"
                            android:layout_margin="4dp"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/nombreBuitreLeonado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buitre Leonado"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
