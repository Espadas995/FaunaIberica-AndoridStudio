<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!--    Título -->
        <TextView
            android:id="@+id/tvCarnivoros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Carnívoros"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--    Contenedor LinearLayout vertical -->
        <LinearLayout
            android:id="@+id/linearLayoutCarnivoros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvCarnivoros"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Lobo Ibérico -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/imgLobo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lobo"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"/>

                    <RadioButton
                        android:id="@+id/radioLobo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:buttonTint="#FF5722"
                        android:layout_margin="4dp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/nombreLobo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lobo Ibérico"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- Gineta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/imgGineta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/gineta"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"/>

                    <RadioButton
                        android:id="@+id/radioGineta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:buttonTint="#FF5722"
                        android:layout_margin="4dp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/nombreGineta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gineta"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- Zorro -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/imgZorro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/zorro"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"/>

                    <RadioButton
                        android:id="@+id/radioZorro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:buttonTint="#FF5722"
                        android:layout_margin="4dp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/nombreZorro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zorro"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- Lince Ibérico -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/imgLince"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lince"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"/>

                    <RadioButton
                        android:id="@+id/radioLince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:buttonTint="#FF5722"
                        android:layout_margin="4dp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/nombreLince"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lince Ibérico"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <!-- Nutria Ibérica -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/imgNutria"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/nutria"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"/>

                    <RadioButton
                        android:id="@+id/radioNutria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:buttonTint="#FF5722"
                        android:layout_margin="4dp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/nombreNutria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutria Ibérica"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
